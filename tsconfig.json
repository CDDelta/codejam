        "target": "ES2020",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}